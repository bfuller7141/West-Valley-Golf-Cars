---
import { getCollection } from 'astro:content';

const cart = await getCollection('carts');
const { data: frontmatter } = cart[0];

const { images } = Astro.props; // Expecting images to be passed in from the parent component
---

<div class="grid-gallery">
    {Array.isArray(images) && images.length > 0 ? (
        images.map((image, index) => (
            <div class="gallery-item" data-aos="fade-up" data-aos-delay={index * 100}>
                <img
                    src={image.image}
                    alt={image.alt || `Image ${index + 1}`}
                    class="img-main-lb"
                    loading="lazy"
                    data-index={index}
                />
            </div>
        ))
    ) : (
        <p>No images available</p>
    )}
</div>

<div id="lightbox-backdrop" class="lightbox-backdrop"></div> 
<button id="close-lightbox" class="close-lightbox">âœ•</button>

<style>
    .grid-gallery {
        display: grid;
        grid-template-columns: repeat(3, 1fr); 
        gap: 1rem;
        margin-top: 2rem;
    }

    @media (max-width: 768px) {
        .grid-gallery {
            grid-template-columns: repeat(2, 1fr); 
        }
    }

    .img-main-lb {
        width: 100%;
        height: auto;
        max-width: 100%;
        height: 100%;
        aspect-ratio: 4/3;
        object-fit: cover;
        box-shadow: var(--shadow);
        border-radius: 0.125rem; 
    }

    /* Lightbox styling */
    .full-size {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 1100;  
        max-width: 100vw;
        max-height: 100vh;
        cursor: zoom-out;
        object-fit: contain; 
    }

    .lightbox-backdrop {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.8);
        z-index: 1000;
        display: none;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .lightbox-backdrop.active {
        display: block;
        opacity: 1;
    }

    .close-lightbox {
        position: fixed;
        top: 1rem;
        right: 1rem;
        background: none;
        border: none;
        font-size: 2rem;
        color: white;
        z-index: 1101;
        display: none;
    }

    .close-lightbox.active {
        display: block;
    }
</style>


