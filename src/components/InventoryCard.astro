---
export interface InventoryCardProps {
    title: string;
    price: string;
    image: string;
    slug: string;
}

const { title, price, image, slug } = Astro.props as InventoryCardProps;
---
<div class="card">
    <img src={image} alt={title} class="inventory-img" loading="lazy"/>
    <div class="inventory-content">
        <h3 class="small-title">{title}</h3>
        <p class="text">{price}</p>
        <a href={slug} aria-label={`Specs and info for ${title}`} class="btn-text">Shop This Cart <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" fill="currentcolor" class="btn-icon"><path d="M422.6 278.6L445.3 256l-22.6-22.6-144-144L256 66.7 210.8 112l22.6 22.6L322.8 224 32 224 0 224l0 64 32 0 290.7 0-89.4 89.4L210.8 400 256 445.3l22.6-22.6 144-144z"/></svg></a>
    </div>
</div>

<style>
    .inventory-img {
        width: 100%;
        max-height: 9rem;
        object-fit: cover;
    }
    .inventory-content {
        margin-top: 1.5rem;
    }
</style>