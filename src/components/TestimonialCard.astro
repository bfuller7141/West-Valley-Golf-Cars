---
export interface TestimonialCardProps {
    name: string;
    rating: number;
    quote: string;
}

const { name, rating, quote } = Astro.props as TestimonialCardProps;
const fullStars = Math.floor(rating); // Number of full stars
const emptyStars = 5 - fullStars; // Remaining empty stars
---

<div class="testimonial-card" aria-label="testimonial">
    <div class="rating">
        {Array(fullStars).fill('★').map((_, index) => (
            <span class="rating-star full">★</span>
        ))}
        {Array(emptyStars).fill('★').map((_, index) => (
            <span class="rating-star empty">★</span>
        ))}
    </div>
    <p class="text">{quote}</p>
    <div class="sub-title">{name}</div>
</div>

<style>
.testimonial-card {
    box-sizing: border-box;
    padding: 1.5rem;
    background-color: var(--white);
    box-shadow: var(--shadow);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
    height: 100%;
    margin-right: 0.5rem;
    margin-left: 0.5rem;
}

.rating {
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
}

.rating-star {
    font-size: 1.5rem;
    margin: 0;
    color: var(--wheat-500);
}

.rating-star.empty {
    color: var(--gray-400);
}

@media (max-width: 560px) {
    .testimonial-card {
        justify-content: flex-start;
        align-items: flex-start;
        margin: 0.5rem;
    }
}
</style>
