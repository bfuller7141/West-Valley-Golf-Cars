---
import BaseHead from "../components/BaseHead.astro";
import ArrowButton from "../components/buttons/ArrowButton.astro";
import ImageButton from "../components/buttons/ImageButton.astro";
import SkipMain from "../components/buttons/SkipMain.astro";
import GeneralForm from "../components/forms/GeneralForm.astro";
import InventoryCardWrap from "../components/InventoryCardWrap.astro";
import NavMain from "../components/NavMain.astro";
import ServiceBanner from "../components/ServiceBanner.astro";
import TestimonialCardWrap from "../components/TestimonialCardWrap.astro";
import FooterMain from "../components/FooterMain.astro";
import LogoWrap from "../components/LogoWrap.astro";
import CookiePopup from "../components/CookiePopup.astro";
---
<!DOCTYPE html>
<html lang="en">
	<BaseHead 
    title="West Valley Golf Cars | Golf Cart Sales, Service, and Rentals in Arizona"
    description="West Valley Golf Cars is Arizona's premier golf cart dealer. We offer new and used golf carts, golf cart rentals, golf cart parts, and golf cart service."
    keywords="golf carts, used golf carts, new golf carts, golf cart service, golf cart rentals, West Valley, Arizona"
	image="/images/opengraph/open-graph_main.webp"
    url="https://www.westvalleygolfcars.com/"
	/>
	<body class="page-transition-enter">
		<SkipMain />
		<CookiePopup />

		<header>
			<NavMain data-aos="fade-down" />
		</header>
		<main id="main-content">
			<section class="hero-home" data-aos="fade-up">
				<div class="top-banner"></div>
                <div class="background-image" aria-hidden="true"></div>
				<div class="padding-hero">
					<div class="container">
						<div class="wrapper column-hero">
							<div class="wrapper">
								<h1 class="page-title" data-aos="fade-up">Arizona's Premier Golf Cart <span class="underline">Destination</span> for Over 20 Years</h1>
								<p class="text" data-aos="fade-up">For over 20 years, we’ve been serving the West Valley with top-notch golf cart sales, service, and rentals, always with a friendly smile. Whether you're looking for a reliable ride or a custom-built cart to turn heads, our team in Litchfield Park has you covered. Let us help you find the perfect cart to suit your needs and style, so you can enjoy every moment on the course and beyond.</p>
								<div class="btn-wrapper" data-aos="fade-up">
									<a href="/sales#inventory" class="btn">View Our Inventory</a>
									<a href="/service#schedule" class="btn secondary">Schedule A Service</a>
								</div>
								<LogoWrap logoSize="logo-small" text="small-text" data-aos="fade-up" />
							</div>
							<img src="/images/static/2024-madjax_blue.webp" alt="2024 Madjax Blue Golf Cart" class="hero-img" loading="eager" data-aos="fade-left" />
						</div>
					</div>
				</div>
			</section>
			<ServiceBanner data-aos="fade-up" />
			<section>
				<div class="large-top" data-aos="fade-right">
					<div class="container">
						<div class="wrapper column-l">
							<img src="/images/static/2023-madjax_navy.webp" alt="2023 Madjax Navy Golf Cart" class="img cart" loading="lazy" data-aos="zoom-in" />
							<div class="wrapper" data-aos="fade-left">
								<h2 class="section-title">Experience The <span class="underline">MadJax</span> X-Series</h2>
								<p class="text">Experience the MadJax X-Series and take your golfing adventures to new heights. With its blend of sleek design and top-tier performance, this cart promises to enhance every moment on the course. Whether you're navigating fairways or cruising around town, the MadJax X-Series delivers both comfort and style, ensuring that every ride is enjoyable and effortless.</p>
								<p class="text">Offering a 3-year warranty and easy access to replacement parts and accessories, the MadJax X-Series is designed for long-lasting enjoyment. Maintaining and upgrading your cart is simple, allowing you to focus on having fun without worrying about downtime. With the MadJax X-Series, the thrill of the ride is always within reach.</p>								
								<div class="btn-wrapper" data-aos="fade-up">
									<div class="sub-title" role="heading">Starting at $14,250</div>
									<a href="#contact" class="btn">Check Availability</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>
			<section>
				<div class="padding-global" data-aos="fade-up">
					<div class="container">
						<h2 class="section-title">Check out our <span class="underline">current</span> Inventory</h2>
					</div>
					<InventoryCardWrap limit={true} data-aos="fade-up"/>
					<div class="container">
						<div class="btn-wrapper" data-aos="fade-up">
							<a href="/sales#inventory" class="btn secondary">View All Inventory</a>
						</div>
					</div>
				</div>
			</section>
			<section>
				<div class="padding-global" data-aos="fade-up">
					<div class="container">
						<h2 class="section-title">Your <span class="underline">Trusted</span> West Valley Golf Cart Dealer</h2>
						<div class="btn-grid" data-aos="zoom-in">
							<ImageButton image="/images/static/sales-home.webp" title="New & Used Carts" link="/sales"/>
							<ImageButton image="/images/static/service-home.webp" title="Expert Service" link="/service"/>
							<ImageButton image="/images/static/rental-home.webp" title="Parts & Accessories" link="/parts"/>
						</div>
					</div>
				</div>
			</section>
			<section>
				<div class="padding-global" data-aos="fade-up">
					<div class="container">
						<div class="wrapper column">
							<div class="wrapper" data-aos="fade-right">
								<h2 class="section-title">Gas Carts or Electric Carts we've got <span class="underline">your back</span></h2>
								<p class="text">Whether you own a gas or electric cart, our expert service team is here to ensure your vehicle runs smoothly and efficiently. From routine maintenance to in-depth repairs, we provide top-tier service for both types of carts, addressing everything from engine tune-ups to battery replacements. No matter the issue, you can count on us to keep your cart in peak condition so you can focus on enjoying the ride.</p>
								<div class="card-wrapper">
									<div class="card" data-aos="fade-up">
										<h3 class="sub-title">Gas Cart Service</h3>
										<p class="text">Keep your gas cart running smoothly with our expert maintenance and repair services. From engine tune-ups to oil changes, we ensure your cart stays in top shape for every ride.</p>
										<ArrowButton slug="/service#services" aria="Learn more about our gas cart service" text="Our Services"/>
									</div>
									<div class="card" data-aos="fade-up">
										<h3 class="sub-title">Electric Cart Service</h3>
										<p class="text">Ensure your electric cart operates at peak performance with our specialized services. From battery checks to electrical system repairs, we’ve got you covered for a smooth and reliable ride.</p>
										<ArrowButton slug="/service#services" aria="Learn more about our electric cart service" text="Our Services"/>
									</div>
								</div>
							</div>
							<img src="/images/static/service-image-1.webp" alt="West Valley Golf Cars mechanic changing tire on golf cart" class="img-main" loading="lazy" data-aos="zoom-in" />
						</div>
					</div>
				</div>
			</section>
			<section>
				<div class="padding-global" data-aos="fade-up">
						<div class="container">
								<h2 class="section-title">Golf Cart Rentals Exclusively for <span class="underline">PebbleCreek</span></h2>
								<div class="wrapper column">
										<div class="wrapper" data-aos="fade-right">
												<p class="text">
														Need a golf cart for a short-term stay or special occasion inside PebbleCreek? 
														We provide convenient, reliable golf cart rentals exclusively for the PebbleCreek community. 
														Whether you're hosting guests, navigating events, or simply want an easier way to get around, 
														our rental carts offer comfort, style, and dependable performance.
												</p>
												<p class="text">
														Rentals are available only within PebbleCreek, ensuring fast service, easy delivery, 
														and carts perfectly suited for the community’s roads and lifestyle.
												</p>
												<div class="btn-wrapper" data-aos="fade-up">
														<a href="/rentals" class="btn">Learn More About Rentals</a>
														<a href="#contact" class="btn secondary">Request a Rental</a>
												</div>
										</div>
										<img 
												src="/images/static/wv-edition-close-up.webp" 
												alt="Golf cart rental available exclusively in PebbleCreek community" 
												class="img-main" 
												loading="lazy" 
												data-aos="zoom-in"
										/>
								</div>
						</div>
				</div>
			</section>
			<section>
				<div class="padding-global" data-aos="fade-up">
					<div class="container">
						<h2 class="section-title center">What Our <span class="underline">Customers</span> Are Saying</h2>
						<TestimonialCardWrap data-aos="fade-up" />
					</div>
				</div>
			</section>
			<section id="contact">
				<div class="padding-global" data-aos="fade-up">
					<div class="container">
						<h2 class="section-title center">Let's Get you into your <span class="underline">Dream</span> Cart today</h2>
						<GeneralForm data-aos="fade-up" />
					</div>
				</div>
			</section>
		</main>
		<footer>
			<FooterMain />
		</footer>
	</body>

	<script type="module">
        import * as AOS from 'aos';
        import 'aos/dist/aos.css';
    
        const initializeAOS = () => {
            if (window.innerWidth > 980) {
                AOS.init({
                    duration: 800,
                    once: true,
                    easing: 'ease-in-out',
                    offset: 0,
                    delay: 0,
                });
            } else {
                const aosElements = document.querySelectorAll('[data-aos]');
                aosElements.forEach((element) => {
                    element.removeAttribute('data-aos');
                    element.style.opacity = '1';
                    element.style.transform = 'none';
                });
            }
        };
    
        // Initialize AOS on initial page load
        document.addEventListener('DOMContentLoaded', () => {
            initializeAOS();
        });
    
        // Reinitialize AOS on back/forward navigation
        window.addEventListener('popstate', () => {
            // Ensure scroll restoration is handled
            window.scrollTo(0, 0);
    
            // Reinitialize AOS animations
            initializeAOS();
        });
    </script> 
</html>
